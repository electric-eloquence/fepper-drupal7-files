form > div
  margin-bottom: 1em
form ol, form ul
  list-style: none
  margin-left: 0
fieldset
  border: 0
  padding: 0
  margin: 0
label
  display: block
  padding-bottom: $space-quarter
button, input, select, textarea
  font-family: inherit
  font-size: 100%
  margin: 0
input, textarea
  border: 1px solid $gray
  padding: $space-half 1.04rem
input[type="text"], input[type="email"], input[type="password"], input[type="url"], input[type="number"]
  width: 25.5rem
input[type="text"], input[type="search"], input[type="url"], input[type="number"], textarea
  -webkit-appearance: none
button, input[type="submit"]
  padding: $space-half
  background: $gray-dark
  border: 1px solid $gray
  color: $white
  cursor: pointer
input[type="checkbox"],
input[type="radio"]
  width: auto
  margin-right: 0.3em
input[type="search"]
  -webkit-appearance: none
  border-radius: 0
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance: none
textarea
  @media all and (max-width: $bp-xs-max)
    width: 100%
  @media all and (min-width: $bp-small)
    max-width: 100%
#edit-actions
  background: transparent
  color: $gray
  padding: 0
  position: relative
#edit-preview
  margin-left: 0.5rem
.form-item,
.form-actions
  margin: 0
#block-search-form
  .page-search &
    display: none
  .container-inline
    display: flex
  .form-item,
  .form-actions
    background: $white-translucent
  .form-item-search-block-form
    font-size: 1em
    margin-bottom: 0
    position: relative
    &::after
      background: url("../../_assets/src/icon-search.svg") no-repeat 0 0
      background-size: cover
      content: ""
      padding: 0.5625em
      position: absolute
      top: 0.6875em
      right: -2em
      z-index: 1
  input
    background: transparent
    height: 2.5em
    &[id^="edit-search-block-form"]
      width: 13.5em
      @media all and (min-width: $bp-med) and (max-width: $bp-md-max)
        width: 11.4375em
    &[id^="edit-submit"]
      border: 1px solid $gray
      border-left: 0
      color: transparent
      padding-right: 0
      padding-left: 0
      position: relative
      width: 3.125em
      z-index: 1
      &:hover
        background: rgba(0, 0, 0, 0.3)
#search-block-form
  > div
    margin-bottom: 0
  // Since this theme always renders a screen-readable h2 for #block-search-form, make the additional h2 added by
  // Drupal core invisible to screen-readers.
  h2.element-invisible
    display: none
