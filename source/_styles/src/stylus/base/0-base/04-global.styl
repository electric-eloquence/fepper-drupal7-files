html
  font-size: (100 / 1.6)%
body
  background-color: $white
  font: 1.6em/1.5 $font-primary
  -webkit-text-size-adjust: 100%
  color: $gray-dark
  min-width: $bp-xx-max
  min-height: 100vh
  padding-bottom: $footer-height
  position: relative
  @media all and (max-width: $bp-sm-max)
    font-size: 1.4em
h1,
h2,
h3,
h4,
h5,
h6
  margin: 0.4rem 0
  padding: 0.4rem 0 0
h1, h2
  line-height: 1.2
h4
  font-size: 1.1em
h5
  font-size: 1.0625em
h6
  font-size: 1em
a,
li a.active
  color: $gray-dark
  text-decoration: none
  outline: 0
  &:focus
    color: $gray
  @media (hover: hover)
    &:hover
      color: $gray
.text a,
a.text,
p a
  text-decoration: underline
aside
  margin-bottom: $space
// Completely remove from the flow and screen readers.
.hidden
  display: none !important
  visibility: hidden !important
// .visually-hidden in base/0-base/01-helpers.styl
// Floats
.right
  float: right
  padding: 0 0 $space $space
.right-search
  float: right
  padding: 0 0 $space 0
.left
  float: left
  padding: 0 $space $space 0
// Text-align
.align-right
  text-align: right
.align-center
  text-align: center
.align-left
  text-align: left
// Display classes
div.error,
div.error a
  color: $error
// Hide elements in print view
@media print
  header.header,
  form,
  footer[role="contentinfo"]
    display: none
