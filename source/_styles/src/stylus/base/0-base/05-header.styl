header.header
  background: $white
  border-bottom: 1px solid $gray-light-2
  padding: 0
  width: 100%
  @media all and (max-width: $bp-sm-max)
    padding-left: $space-half
  @media all and (min-width: $bp-med) and (max-width: $max-width)
    width: "calc(100% - %s)" % $space
  @media all and (min-width: $bp-med)
    margin-top: $space-half
  @media all and (min-width: $max-width)
    width: "calc(%s - %s)" % ($max-width $space)
#block-fepper-branding
  float: left
  position: relative
  h1
    margin: 0
    padding: 0
.region-header
  #block-search-form
    float: right
    > h2
      float: right
      margin: 0
      padding: 0
      > a
        @extend .mobile-nav-icon
        &::before
          background: url("../../_assets/src/icon-search.svg") no-repeat 0 0
          background-size: cover
          filter: invert(20%)
    @media all and (max-width: $bp-sm-max)
      position: static // In order for the mobile nav to work while logged in.
      .content
        max-height: 0
        overflow: hidden
        position: absolute
        top: $nav-toggle-n-border
        right: 0
        z-index: 3
      &.open
        .content
          max-height: none
          overflow: visible
    @media all and (min-width: $bp-med)
      margin-bottom: $space-half
      .hidden-link
        display: none
  #block-system-user-menu
    @media all and (max-width: $bp-sm-max)
      float: left
    @media all and (min-width: $bp-med)
      float: right
