header.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
  width: 100%
  @media all and (max-width: $bp-sm-max)
    margin: 0
    padding-left: $space-half
  @media all and (min-width: $bp-med) and (max-width: $max-width)
    width: "calc(100% - %s)" % $space
  @media all and (min-width: $max-width)
    width: "calc(%s - %s)" % ($max-width $space)
#block-fepper-branding
  position: relative
  h1
    margin: 0
    padding: 0
.region-header
  #block-search-form
    float: right
    margin-top: $space-half
    > h2
      @extend .mobile-nav-icon
      @extend .visually-hidden
      float: right
      margin: 0
      > a::before
        background: url("../../_assets/src/icon-search.svg") no-repeat 0 0
        background-size: cover
@media all and (max-width: $bp-sm-max)
  .region-header
    #block-search-form
      margin-top: 0
      > h2
        // Undo .visually-hidden.
        overflow: visible
        position: relative !important
        width: auto
        height: auto
        clip: auto
      .content
        max-height: 0
        overflow: hidden
        position: absolute
        top: $nav-toggle-n-border
        right: 0
        z-index: 3
    #block-search-form.open
      .content
        max-height: none
        overflow: visible
