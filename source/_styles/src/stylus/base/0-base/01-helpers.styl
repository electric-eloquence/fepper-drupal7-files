// Clearfix
.cf
  &::before, &::after
    content: " "
    display: table
  &::after
    clear: both
// Layout Container
.lc
  clear: both
  max-width: $max-width
  margin: 0 auto
  padding: $space-half
// Completely remove from the flow but leave available to screen readers.
.visually-hidden
  border: 0 !important
  clip: rect(1px, 1px, 1px, 1px) !important
  overflow: hidden !important
  padding: 0 !important
  pointer-events: none !important
  position: absolute !important
  width: 1px !important
  height: 1px !important

// ////////////////////////////////////////////////////////////////////////////////////
// Stylus autoprefixing mixins
//
// Use
//   transform: translateX(10px) rotate(10deg) translateY(5px)
//
// These mixins can be safely updated or removed as vendor prefixes become unnecessary.
// ////////////////////////////////////////////////////////////////////////////////////
transform()
  -webkit-transform: arguments
  -moz-transform: arguments
  -ms-transform: arguments
  -o-transform: arguments
  transform: arguments
transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  -ms-transition: arguments
  -o-transition: arguments
  transition: arguments

// /////////////////////////////////////////////////////////////////////////////
// Various and sundry for this implementation.
// /////////////////////////////////////////////////////////////////////////////
.mobile-nav-icon
  background-color: $white-translucent
  color: transparent
  cursor: pointer
  display: block
  overflow: hidden
  padding: 1.2rem 0.9rem
  position: relative
  z-index: 2
  width: 4rem
  height: 4.6rem // This is the height of the header when the demo site uses the base theme.
  &:active
    background-color: $gray-light-1
  &::before
    content: ""
    display: block
    padding: 1.1rem
  &:hover::before,
  &:focus::before
    filter: invert(50%)
