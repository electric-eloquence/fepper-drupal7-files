header.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
  @media all and (max-width: $bp-sm-max)
    margin: 0 0 0 $space-half
    width: "calc(100% - %s)" % $space-half
  @media all and (min-width: $bp-med) and (max-width: $max-width)
    width: "calc(100% - %s)" % $space
  @media all and (min-width: $max-width)
    width: "calc(%s - %s)" % ($max-width $space)
#block-fepper-branding
  position: relative
  img
    float: left
    margin: $space-half 0
    @media all and (max-width: $bp-sm-max)
      height: 3.7rem
// Icon fonts in header
#main-menu,
#block-search-form
  h2
    background: $white-translucent
    border-left: 1px solid $gray-light-3
    color: transparent
    cursor: pointer
    float: right
    margin: 0
    width: $nav-toggle-n-border
    height: $nav-toggle-height
    position: relative
    z-index: 2
    &::before
      color: $gray-dark
      float: right
      font-size: 2.1rem
      padding: 0.8em
    &:hover::before
      color: $gray
    @media all and (min-width: $bp-med)
      display: none
#block-search-form
  position: relative
  .page-search &
    display: none
  h2
    float: right
    &::before
      @extend .icon-search::before
  .content
    @extend .cf
  @media all and (max-width: $bp-sm-max)
    margin: 0
