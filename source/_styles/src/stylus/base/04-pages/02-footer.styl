footer[role="contentinfo"]
  clear: both
  overflow: hidden
  background: $gray-dark-2
  color: $white
  height: $footer-height
  line-height: 1.2
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  a
    color: $gray-light
.region-footer
  padding-top: $space
  @extend .lc
  .content
    margin-bottom: 0
    p
      margin: 0
    @media all and (max-width: $bp-xs-max)
      p
        text-align: center
    @media all and (min-width: $bp-med)
      float: right
