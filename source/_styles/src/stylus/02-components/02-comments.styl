#comments
  border-top: 1px solid $gray-light-3
  margin-top: 2em
  h2
    margin: 0.667em 0 0
  .comment
    display: flex 
    margin-top: 0.75em
    padding-bottom: 0.5em
    .submitted
      min-height: 11em
      width: 12em
      > span
        display: block
        font-size: 0.75em
        line-height: 1.333
        margin-left: 2px
    .content
      padding-bottom: 0.5em
      p
        margin-bottom: 0
    .submitted + .content
      width: calc(100% - 12em)
  .user-picture
    img
      display: block
      border: 1px solid $gray-light-2
      margin-bottom: 0.5em
      width: 6.25em
  .username
    font-weight: bold
    &::before
      content: "\A"
      white-space: pre
    &::after
      content: "\A"
      white-space: pre
  article.comment:last-of-type
    border-bottom: 1px solid $gray-light-3
  .links
    display: block
    margin-top: 0.25em;
    margin-bottom: 0;
    li
      display: list-item
  .indented
    margin-left: 0.75em
    .comment
      border-left: 1px solid $gray-light-3
  @media all and (max-width: $bp-xs-max)
    .comment
      display: block
      overflow: hidden
      .submitted
        margin-bottom: 0.5em
        min-height: 0
        width: auto
        > span
          margin-left: 0
      .submitted + .content
        width: auto
      .content
        padding-bottom: 0
    .user-picture
      display: none
    .username
      &::before
        content: ""
      &::after
        content: ""
    .indented
      .comment
        > *
          margin-left: 2px
