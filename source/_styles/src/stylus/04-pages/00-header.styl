header.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
#block-fepper-branding
  position: relative
  z-index: 1
  img
    float: left
    height: 3.7rem
    margin: 0.65rem
    @media all and (min-width: $bp-med)
      height: 4.2rem
/* Icon fonts in header */
#navigation,
#block-search-form
  h2
    background: $white-translucent
    border-left: 1px solid $gray-light-3
    color: transparent
    cursor: pointer
    float: right
    margin: 0
    width: 5.1rem
    height: 5rem
    overflow: hidden
    &::before
      color: $gray-dark
      float: right
      font-size: 2.1rem
      padding: 0.7em
    &:hover::before
      color: $gray
    @media all and (min-width: $bp-med)
      display: none
#block-search-form
  background: $white-translucent
  float: right
  margin: 0.65em 0.5em 0 0
  position: relative
  h2
    clear: both
    &::before
      @extend .icon-search::before
  &.open
    max-height: 100%
  @media all and (max-width: $bp-sm-max)
    margin: 0.1rem 0 0
    max-height: 4.9rem
    overflow: hidden
    position: absolute
    top: 0
    right: 0
    z-index: 2
