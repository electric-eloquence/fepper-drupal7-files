#main,
.layout-content
  @extend .cf
.page-blog .layout-content,
.not-front.page-node.one-sidebar.sidebar-second .layout-content,
.two-sidebars #sidebar-first
  @media all and (min-width: $bp-med)
    float: left
    width: $column-width-two-thirds + "%"
  @media all and (min-width: $bp-large)
    width: $column-width-three-quarters + "%"
#sidebar-second
  @media all and (max-width: $bp-xs-max)
    text-align: center
  @media all and (min-width: $bp-med)
    float: left
    width: $column-width-one-third + "%"
    .page-hero &,
    .page-blog &,
    .page-node &
      padding: 0 0 0 1em
  @media all and (min-width: $bp-large)
    width: $column-width-one-quarter + "%"
#block-views-recent-content-block-2,
.view-id-recent_content.view-display-id-page_1
  .view-content
    @extend .cf
  .node-teaser
    > h2
      font-size: 1.25em
  @media all and (max-width: $bp-xs-max)
    h2
      text-align: center
    p
      margin-top: $space-quarter
    .field-name-field-image
      display: flex
      justify-content: center
      a
        display: block
        max-width: 22.5rem
  @media all and (min-width: $bp-small)
    .item-list
      margin-top: $space-quarter
      .views-row
        clear: both
        float: left
        margin-bottom: $space
    .node-teaser
      margin-bottom: 0
      width: "calc(100vw - %s)" % $space
      > h2,
      .field-name-body p
        float: right
        padding: 0 1.6rem
        width: $column-width-three-quarters + "%"
      > h2
        margin-top: 0
      img
        float: left
        width: $column-width-one-quarter + "%"
  @media all and (min-width: $bp-med) and (max-width: $bp-md-max)
    .node-teaser
      width: "%svw" % $column-width-two-thirds
  @media all and (min-width: $bp-large) and (max-width: $max-width)
    .node-teaser
      width: "%svw" % $column-width-three-quarters
  @media all and (min-width: $max-width)
    .node-teaser
      width: ($column-width-three-quarters / 100) * $max-width
