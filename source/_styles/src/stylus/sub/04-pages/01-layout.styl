#main,
.layout-content
  @extend .cf
@media all and (max-width: $bp-xs-max)
  #sidebar-second
    text-align: center
@media all and (max-width: $bp-sm-max)
  .layout-content
    clear: both
@media all and (min-width: $bp-med)
  .layout-content,
  .two-sidebars #sidebar-first
    float: left
    width: 2 * (100% / 3)
    padding-right: 1em
  .no-sidebars .layout-content
    width: 100%
  .one-sidebar #sidebar-first
    display: flex
    justify-content: center
    padding-right: 0
  #sidebar-second
    float: left
    width: (100% / 3)
    padding: 0 0 0 1em
