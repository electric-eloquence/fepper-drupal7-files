{{{ php_docblock }}}
<div id="{{ block_html_id }}" class="{{ block_classes }}" {{{ block_attributes }}}>

  {{{ title_prefix }}}
  {{# block_subject }}
    <h2 {{{ title_attributes }}}>{{{ block_subject }}}</h2>
  {{/ block_subject }}
  {{{ title_suffix }}}

  <div class="content" {{{ content_attributes }}}>

    {{! BEGIN HOMEPAGE }}

    {{# templates-views-view~~pages-homepage__hero? }}
      {{> 03-templates/views-view(
        views-view_classes: 'view view-recent-content view-id-recent_content view-display-id-page_2',
        "templates-views-view-unformatted~~pages-homepage__hero?": true
      ) }}
    {{/ templates-views-view~~pages-homepage__hero? }}
    {{# templates-views-view~~pages-homepage__dagwood? }}
      {{> 03-templates/views-view(
        views-view_classes: 'view view-recent-content view-id-recent_content view-display-id-block_2',
        "templates-views-view-list~~pages-homepage__dagwood?": true,
        "more?": true
      ) }}
    {{/ templates-views-view~~pages-homepage__dagwood? }}

    {{! END HOMEPAGE }}


    {{! BEGIN BLOG }}

    {{# templates-views-view~~pages-blog? }}
      {{> 03-templates/views-view(
        views-view_classes: 'view view-recent-content view-id-recent_content view-display-id-page_1',
        "templates-views-view-list~~pages-blog?": true,
        "pager?": true
      ) }}
    {{/ templates-views-view~~pages-blog? }}

    {{! END BLOG }}


    {{! BEGIN ARTICLE }}

    {{# templates-node~~pages-article? }}
      {{> 03-templates/node(
        node_classes: 'node node-article node-promoted clearfix',
        node_attributes: ' role="article" typeof="schema:Article"',
        "submitted?": true,
        "components-article?": true
      ) }}
    {{/ templates-node~~pages-article? }}

    {{! END ARTICLE }}


    {{! BEGIN NEW INSTALL }}

    {{# compounds-new-install? }}
      {{> 01-compounds/00-text/01-new-install }}
    {{/ compounds-new-install? }}
    {{# compounds-login? }}
      {{> 01-compounds/02-forms/02-login }}
    {{/ compounds-login? }}

    {{! END NEW INSTALL }}


    {{! BEGIN SIDEBAR2 VIEWS }}

    {{# templates-views-view~~templates-block--sidebar2__posts? }}
      {{> 03-templates/views-view(
        views-view_classes: 'view view-recent-content view-id-recent_content view-display-id-block',
        "templates-views-view-list~~templates-block--sidebar2__posts?": true
      ) }}
    {{/ templates-views-view~~templates-block--sidebar2__posts? }}
    {{# templates-views-view~~templates-block--sidebar2__comments? }}
      {{> 03-templates/views-view(
        views-view_classes: 'view view-comments-recent view-id-comments_recent view-display-id-block',
        "templates-views-view-list~~templates-block--sidebar2__comments?": true
      ) }}
    {{/ templates-views-view~~templates-block--sidebar2__comments? }}

    {{! END SIDEBAR2 VIEWS }}


    {{! BEGIN FOOTER }}

    {{# components-footer? }}
      {{{ copyright }}}
    {{/ components-footer? }}
    {{# components-footer~~pages-new-install? }}
      {{{ powered_by }}}
    {{/ components-footer~~pages-new-install? }}

    {{! END FOOTER }}


    {{{ fpo_template_content }}}

  </div>
</div>
